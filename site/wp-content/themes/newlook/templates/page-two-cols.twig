{% extends "base.twig" %}

{% block content %}
{% if post.thumbnail %}
    <div class="hero" style="background-image: url('{{post.thumbnail.src|resize(1400)}}')"></div>
{% endif %}
<main class="main" role="main">
	<div class="wrap">
		<div class="post-body">
			<div class="row">
		    	<div class="col-6">
		    	    {{post.content}}
		    	</div>
		        <div class="col-6">
		            {{post.get_field('sidebar')}}
		        </div>
			</div>
		</div>
	</div>
	{% block content_more %}{% endblock %}
</main>

{% endblock %}
